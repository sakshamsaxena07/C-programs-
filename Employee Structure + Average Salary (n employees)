#include <stdio.h>

struct employee {
    char name[50];
    char address[100];
    int age;
    float salary;
};

int main() {
    int n, i;
    float sum = 0;

    printf("Enter number of employees: ");
    scanf("%d", &n);

    struct employee e[n];

    for(i = 0; i < n; i++) {
        printf("\nEnter Name: ");
        scanf("%s", e[i].name);

        printf("Enter Address: ");
        scanf(" %[^\n]", e[i].address);

        printf("Enter Age: ");
        scanf("%d", &e[i].age);

        printf("Enter Salary: ");
        scanf("%f", &e[i].salary);

        sum += e[i].salary;
    }

    printf("\nAverage Salary = %.2f\n", sum / n);

    return 0;
}
