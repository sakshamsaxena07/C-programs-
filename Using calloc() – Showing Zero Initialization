#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i;
    int *arr;

    printf("Enter number of integers: ");
    scanf("%d", &n);

    arr = (int*) calloc(n, sizeof(int));

    printf("Values after calloc():\n");
    for(i = 0; i < n; i++)
        printf("%d ", arr[i]);

    printf("\nEnter %d new values:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Updated values:\n");
    for(i = 0; i < n; i++)
        printf("%d ", arr[i]);

    free(arr);

    return 0;
}
