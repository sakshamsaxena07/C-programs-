#include <stdio.h>

float calculateSalary(float basic, int isMetro) {
    float hra, da, total;

    if (isMetro)
        hra = 0.15 * basic;
    else
        hra = 0.10 * basic;

    da = 0.05 * basic;
    total = basic + hra + da;

    return total;
}

int main() {
    float basic, total;
    int cityType;

    printf("Enter Basic Salary: ");
    scanf("%f", &basic);
    printf("Enter 1 for Metro city, 0 for Non-metro: ");
    scanf("%d", &cityType);

    total = calculateSalary(basic, cityType);
    printf("Monthly Salary = %.2f\n", total);
    return 0;
}
