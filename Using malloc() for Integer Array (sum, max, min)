#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, sum = 0, max, min;
    int *arr;

    printf("Enter size of array: ");
    scanf("%d", &n);

    arr = (int*) malloc(n * sizeof(int));

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        sum += arr[i];
    }

    max = min = arr[0];

    for(i = 1; i < n; i++) {
        if(arr[i] > max) max = arr[i];
        if(arr[i] < min) min = arr[i];
    }

    printf("Sum = %d\n", sum);
    printf("Max = %d\n", max);
    printf("Min = %d\n", min);

    free(arr);

    return 0;
}
