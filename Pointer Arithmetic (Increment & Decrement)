#include <stdio.h>

int main() {
    int a = 10;
    float b = 20.5;
    char c = 'X';

    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;

    printf("Original Addresses:\n");
    printf("p1 = %p, p2 = %p, p3 = %p\n", p1, p2, p3);

    p1++;
    p2++;
    p3++;

    printf("After Increment:\n");
    printf("p1 = %p, p2 = %p, p3 = %p\n", p1, p2, p3);

    p1--;
    p2--;
    p3--;

    printf("After Decrement (Back to original):\n");
    printf("p1 = %p, p2 = %p, p3 = %p\n", p1, p2, p3);

    return 0;
}
